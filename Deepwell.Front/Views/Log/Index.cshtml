@model  PagedList.IPagedList<Deepwell.Front.Models.Log.ExceptionLogModel>
@using Deepwell.Common.Extensions;
@using PagedList.Mvc;

@{
    ViewBag.Title = "Exception Logs";
}

<div class="table_panel">
    @if (Model.IsNotNull() && Model.Any())
    {
        <table>
            <thead>
                <tr>
                    <td width="200">@Html.DisplayNameFor(model => model.First().ExceptionDate)</td>
                    <td width="50">@Html.DisplayNameFor(model => model.First().Level)</td>
                    <td>@Html.DisplayNameFor(model => model.First().Message)</td>
                    <td width="180">@Html.DisplayNameFor(model => model.First().Logger)</td>

                </tr>
            </thead>

            <tbody>
                @foreach (var item in Model)
                {
                    <tr class="activated_row">
                        <td>@item.ExceptionDate.ToString("dd MMM yyyy HH:mm:ss tt")</td>
                        <td>@Html.DisplayFor(modelItem => item.Level)</td>
                        <td>
                            <div style="max-height:300px;width:540px;overflow:auto;">
                                @Html.DisplayFor(modelItem => item.Message)
                            </div>
                        </td>
                        <td>@Html.DisplayFor(modelItem => item.Logger)</td>
                    </tr>
                }
            </tbody>
        </table>

        <div class="pagination_panel">
            <div class="show_sum">
                Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber)
                of @Model.PageCount
            </div>
            @Html.PagedListPager(Model, page => Url.Action("Index", new { page }))
        </div>
    }
    else
    {
        <div class="no_result">No logs were found.</div>
    }
</div>
